<UserControl x:Class="Terminfindungsapp.UserControls.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Terminfindungsapp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#cccccc">
        <Grid Background="#666666" Margin="150, 20, 150, 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Background="#666666" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Notifications"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#a1a1a1">
                <StackPanel x:Name="staRequests" Margin="10, 5, 5, 5">
                    <StackPanel Grid.Row="1" Margin="10"></StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
